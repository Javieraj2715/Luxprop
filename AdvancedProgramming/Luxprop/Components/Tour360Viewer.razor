@using Microsoft.JSInterop
@inject IJSRuntime JS

<link rel="stylesheet"
      href="https://unpkg.com/photo-sphere-viewer@5.5.2/dist/photo-sphere-viewer.css" />

<script src="https://unpkg.com/three@0.152.2/build/three.min.js"></script>
<script src="https://unpkg.com/photo-sphere-viewer@5.5.2/dist/photo-sphere-viewer.js"></script>
<script src="js/tour360.js"></script>

<div id="@_viewerId" style="width:100%; height:500px;"></div>

@code {
    [Parameter]
    public string ImageUrl { get; set; } = string.Empty;

    private string _viewerId = $"tour360_{Guid.NewGuid():N}";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !string.IsNullOrWhiteSpace(ImageUrl))
        {
            await JS.InvokeVoidAsync("tour360.initViewer", _viewerId, ImageUrl);
        }
    }
}