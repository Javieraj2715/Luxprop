@page "/properties"

@using Luxprop.Data.Models
@using Microsoft.EntityFrameworkCore
@using Luxprop.Business.Services
@inject IPropiedadService PropiedadService
@inject NavigationManager Navigation

<PageTitle>Properties - Luxprop</PageTitle>

<div class="properties-page">
    <div class="page-header">
        <h1>Properties</h1>
        <a href="/properties/create" class="btn btn-primary">Create New Property</a>
    </div>

    @if (properties == null)
    {
        <div class="loading">Loading properties...</div>
    }
    else if (!properties.Any())
    {
        <div class="no-data">No properties found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>MLS ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Construction Area</th>
                        <th>Land Area</th>
                        <th>Status</th>
                        <th>Location</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var property in properties)
                    {
                        <tr>
                            <td>@property.MlsId</td>
                            <td>@property.Titulo</td>
                            <td>@property.Descripcion</td>
                            <td>@property.Tipo_Propiedad</td>
                            <td>@property.Precio?.ToString("C")</td>
                            <td>@property.AreaConstruccion m²</td>
                            <td>@property.AreaTerreno m²</td>
                            <td>@property.EstadoPublicacion</td>
                            <td>@property.Ubicacion?.Provincia</td>
                            <td>
                                <div class="action-buttons">
                                    <a href="/properties/details/@property.PropiedadId" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a href="/properties/edit/@property.PropiedadId" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>

                                    @* ✅ Si la propiedad ya tiene expediente(s) *@
                                    @if (property.Expedientes != null && property.Expedientes.Any())
                                    {
                                        var expedienteId = property.Expedientes.First().ExpedienteId;
                                        <a href="/expedientes/details/@expedienteId" class="btn btn-sm btn-outline-success">
                                            <i class="bi bi-folder2-open"></i> Ver Expediente
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="/expedientes/create/@property.PropiedadId" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-folder-plus"></i> Crear Expediente
                                        </a>
                                    }

                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteProperty(property.PropiedadId)">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Propiedad>? properties;

    protected override async Task OnInitializedAsync()
    {
        await LoadProperties();
    }

    private async Task LoadProperties()
    {
        try
        {
            properties = await PropiedadService.GetAllAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading properties: {ex.Message}");
        }
    }

    private async Task DeleteProperty(int id)
    {
        try
        {
            var deleted = await PropiedadService.DeleteAsync(id);
            if (deleted)
                await LoadProperties();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting property: {ex.Message}");
        }
    }
}
