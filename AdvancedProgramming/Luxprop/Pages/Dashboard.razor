@page "/dashboard"
@inject IJSRuntime JSRuntime

<PageTitle>Dashboard - Luxprop</PageTitle>

<div class="dashboard-welcome">
    <h2>Welcome back 👋</h2>
    <p>Here’s a quick summary of your pending items:</p>
</div>

<div class="summary-cards">
    <!-- Card 1 -->
    <div class="summary-card">
        <div class="card-left"></div>
        <div class="card-content">
            <h3>📄 Pending Documents</h3>
            <p>3 documents require your signature</p>
            <a href="/documents" class="summary-btn">View documents</a>
        </div>
    </div>

    <!-- Card 2 -->
    <div class="summary-card">
        <div class="card-left"></div>
        <div class="card-content">
            <h3>⏰ Reminders</h3>
            <p>2 processes expire this week</p>
            <a href="/reminders" class="summary-btn">View reminders</a>
        </div>
    </div>

    <!-- Card 3 -->
    <div class="summary-card">
        <div class="card-left"></div>
        <div class="card-content">
            <h3>🚧 Active Processes</h3>
            <p>1 under review, 2 pending</p>
            <a href="/files" class="summary-btn">View files</a>
        </div>
    </div>
</div>

@code {
    // Sin datos reales, todo estático por ahora como pediste
}

<style>
    /* Fondo general */
    .dashboard-page, body {
        background-color: #f8f9fa;
    }

    /* Sección de bienvenida */
    .dashboard-welcome {
        margin-bottom: 2rem;
        padding: 1rem 0;
    }

        .dashboard-welcome h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #0d505a;
            margin-bottom: .5rem;
        }

        .dashboard-welcome p {
            color: #555;
            font-size: 1rem;
        }

    /* Contenedor de tarjetas */
    .summary-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    /* Tarjeta individual */
    .summary-card {
        background-color: #fff;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.08);
        display: flex;
        overflow: hidden;
        align-items: flex-start;
        transition: transform 0.2s ease-in-out;
    }

        .summary-card:hover {
            transform: translateY(-3px);
        }

    /* Línea verde izquierda */
    .card-left {
        width: 6px;
        background-color: #2ecc71;
    }

    /* Contenido de la tarjeta */
    .card-content {
        padding: 1.5rem;
    }

        .card-content h3 {
            font-size: 1.2rem;
            font-weight: 600;
            color: #084c61;
            margin-bottom: .5rem;
        }

        .card-content p {
            font-size: .95rem;
            color: #555;
            margin-bottom: 1rem;
        }

    /* Botón dentro de tarjeta */
    .summary-btn {
        display: inline-block;
        padding: .5rem 1rem;
        background-color: #084c61;
        color: #fff;
        font-weight: 600;
        border-radius: 6px;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

        .summary-btn:hover {
            background-color: #053744;
        }
</style>
