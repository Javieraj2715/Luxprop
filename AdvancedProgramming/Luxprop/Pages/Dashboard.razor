@page "/dashboard"
@using Luxprop.Data
@using Luxprop.Data.Models
@using Microsoft.AspNetCore.SignalR.Client
@inject LuxpropContext Db
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject Luxprop.Services.SessionService SessionService
@implements IAsyncDisposable

<PageTitle>Dashboard - Luxprop</PageTitle>

<div class="dashboard-page">
    <div class="page-header">
        <h1>Dashboard</h1>
    </div>

    <div class="dashboard-grid">
        <div class="dashboard-card">
            <div class="card-header">
                <h3>Properties Overview</h3>
            </div>
            <div class="card-content">
                <div class="stat-item">
                    <span class="stat-number">@totalProperties</span>
                    <span class="stat-label">Total Properties</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@activeProperties</span>
                    <span class="stat-label">Active Properties</span>
                </div>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-header">
                <h3>Quick Actions</h3>
            </div>
            <div class="card-content">
                <div class="action-buttons">
                    <a href="/properties/create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>
                        Add Property
                    </a>
                    <a href="/properties" class="btn btn-secondary">
                        <i class="bi bi-list"></i>
                        View Properties
                    </a>
                    <a href="/chat" class="btn btn-info">
                        <i class="bi bi-chat"></i>
                        Chat Support
                    </a>
                    <a href="/expedientes" class="btn btn-info">
                        <i class="bi bi-folder"></i>
                        View Case Files
                    </a>
                </div>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-header">
                <h3>Recent Activity</h3>
            </div>
            <div class="card-content">
                @if (recentProperties?.Any() == true)
                {
                    <div class="activity-list">
                        @foreach (var property in recentProperties.Take(5))
                        {
                            <div class="activity-item">
                                <div class="activity-title">@property.Titulo</div>
                                <div class="activity-meta">@property.EstadoPublicacion</div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="no-activity">No recent activity</div>
                }
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-header">
                <h3>Navigation</h3>
            </div>
            <div class="card-content">
                <nav class="dashboard-nav">
                    <a href="/properties" class="nav-link">
                        <i class="bi bi-building"></i>
                        Properties
                    </a>
                    <a href="/User/Create" class="nav-link">
                        <i class="bi bi-person-plus"></i>
                        Create User
                    </a>
                    <a href="/chat" class="nav-link">
                        <i class="bi bi-chat-dots"></i>
                        Chat
                    </a>
                    <a href="/documents" class="nav-link">
                        <i class="bi bi-file-text"></i>
                        Documents
                    </a>
                    <a href="/map" class="nav-link">
                        <i class="bi bi-geo-alt"></i>
                        Map
                    </a>
                    <a href="/records" class="nav-link">
                        <i class="bi bi-archive"></i>
                        Records
                    </a>
                </nav>
            </div>
        </div>

        <!-- Chat Notifications -->
        <div class="dashboard-card">
            <div class="card-header">
                <h3>Chat Notifications</h3>
            </div>
            <div class="card-content">
                @if (chatNotifications.Count == 0)
                {
                    <div class="no-activity">No notifications yet</div>
                }
                else
                {
                    <ul class="activity-list">
                        @foreach (var n in chatNotifications)
                        {
                            <li class="activity-item">@n</li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private int totalProperties = 0;
    private int activeProperties = 0;
    private List<Propiedad>? recentProperties;

    private HubConnection? hub;
    private readonly List<string> chatNotifications = new();

    private bool _initialized;
    private bool _authorized;
    private string _role = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _initialized) return;
        _initialized = true;

        var roleRaw = await SessionService.GetUserRoleAsync();
        _role = NormalizeRole(roleRaw);

        _authorized = _role == "admin";
        if (!_authorized)
        {
            var target = _role switch
            {
                "agent" => "/dashboardagent",
                "seller" => "/dashboardvend",
                "buyer" => "/dashboardcomp",
                _ => "/login"
            };
            NavigationManager.NavigateTo(target);
            return;
        }

        await LoadDashboardData();
        await InitializeChatHubAsync();
        await LoadUserName();
        StateHasChanged();
    }

    private async Task LoadDashboardData()
    {
        try
        {
            var properties = Db.Propiedads.ToList();
            totalProperties = properties.Count;
            activeProperties = properties.Count(p => p.EstadoPublicacion == "Active");
            recentProperties = properties.OrderByDescending(p => p.PropiedadId).ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
    }

    private async Task LoadUserName()
    {
        try
        {
            var userName = await JSRuntime.InvokeAsync<string>("sessionStorage.getItem", "UserName");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading user name: {ex.Message}");
        }
    }

    private async Task InitializeChatHubAsync()
    {
        try
        {
            hub = new HubConnectionBuilder()
                .WithUrl(NavigationManager.ToAbsoluteUri("/hubs/chat"))
                .WithAutomaticReconnect()
                .Build();

            hub.On<object>("NewThread", payload =>
            {
                string text;
                try
                {
                    dynamic d = payload!;
                    text = $"New chat from {d.clientName} (Thread #{d.threadId})";
                }
                catch
                {
                    text = $"New chat started: {payload}";
                }

                chatNotifications.Insert(0, text);
                InvokeAsync(StateHasChanged);
            });

            await hub.StartAsync();

            if (_role == "agent")
            {
                var agentId = (await SessionService.GetUserIdAsync()).ToString();
                await hub.SendAsync("JoinAgent", agentId);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error initializing chat hub: {ex.Message}");
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (hub is not null)
            await hub.DisposeAsync();
    }

    private static string NormalizeRole(string? name)
    {
        var n = name?.Trim().ToLowerInvariant();
        return n switch
        {
            "administrador" or "admin" => "admin",
            "agente" or "agent" => "agent",
            "vendedor" or "seller" => "seller",
            "comprador" or "buyer" or "cliente" => "buyer",
            _ => string.Empty
        };
    }
}





