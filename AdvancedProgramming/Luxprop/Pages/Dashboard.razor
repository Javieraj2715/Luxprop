@page "/dashboard"
@using Luxprop.Data
@using Luxprop.Data.Models
@using Microsoft.AspNetCore.SignalR.Client
@inject LuxpropContext Db
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@inject Luxprop.Services.SessionService SessionService
@implements IAsyncDisposable

<PageTitle>Dashboard - Luxprop</PageTitle>

<div class="dashboard-welcome">
    <h2>Welcome back 👋</h2>
    <p>Here’s a quick summary of your pending items:</p>
</div>

<div class="summary-cards">
    <!-- Card 1 -->
    <div class="summary-card">
        <div class="card-left"></div>
        <div class="card-content">
            <h3>📄 Pending Documents</h3>
            <p>3 documents require your signature</p>
            <a href="/documents" class="summary-btn">View documents</a>
<div class="dashboard-page">
    <div class="page-header">
        <h1>Dashboard</h1>
    </div>

    <div class="dashboard-grid">
        <div class="dashboard-card">
            <div class="card-header">
                <h3>Properties Overview</h3>
            </div>
            <div class="card-content">
                <div class="stat-item">
                    <span class="stat-number">@totalProperties</span>
                    <span class="stat-label">Total Properties</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@activeProperties</span>
                    <span class="stat-label">Active Properties</span>
                </div>
            </div>
        </div>

        <div class="dashboard-card">
            <div class="card-header">
                <h3>Quick Actions</h3>
            </div>
            <div class="card-content">
                <div class="action-buttons">
                    <a href="/properties/create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i>
                        Add Property
                    </a>
                    <a href="/properties" class="btn btn-secondary">
                        <i class="bi bi-list"></i>
                        View Properties
                    </a>
                    <a href="/chat" class="btn btn-info">
                        <i class="bi bi-chat"></i>
                        Chat Support
                    </a>
                    <a href="/expedientes" class="btn btn-info">
                        <i class="bi bi-folder"></i>
                        View Case Files
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Card 2 -->
    <div class="summary-card">
        <div class="card-left"></div>
        <div class="card-content">
            <h3>⏰ Reminders</h3>
            <p>2 processes expire this week</p>
            <a href="/reminders" class="summary-btn">View reminders</a>
        </div>
    </div>

    <!-- Card 3 -->
    <div class="summary-card">
        <div class="card-left"></div>
        <div class="card-content">
            <h3>🚧 Active Processes</h3>
            <p>1 under review, 2 pending</p>
            <a href="/files" class="summary-btn">View files</a>
        </div>

        <!-- Chat Notifications -->
        <div class="dashboard-card">
            <div class="card-header">
                <h3>Chat Notifications</h3>
            </div>
            <div class="card-content">
                @if (chatNotifications.Count == 0)
                {
                    <div class="no-activity">No notifications yet</div>
                }
                else
                {
                    <ul class="activity-list">
                        @foreach (var n in chatNotifications)
                        {
                            <li class="activity-item">@n</li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>

