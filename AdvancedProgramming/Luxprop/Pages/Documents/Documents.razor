@page "/documents"
@using Luxprop.Business.Services
@using Luxprop.Data.Models
@inject LuxpropContext Db
@inject IDocumentoService DocumentoService
@inject Luxprop.Services.SessionService Session


<PageTitle>Documents - Luxprop</PageTitle>

<div class="documents-page">
    <div class="page-header">
        <h1>Documents</h1>
        <div class="header-actions">
            <select @onchange="OnFilterChanged" class="form-select">
                <option value="">-- All Types --</option>
                @foreach (var type in documentTypes)
                {
                    <option value="@type">@GetFriendlyTypeName(type)</option>
                }
            </select>

            <select @onchange="OnTagFilterChanged" class="form-select" style="max-width: 180px;">
                <option value="">-- All Tags --</option>
                @foreach (var tag in availableTags)
                {
                    <option value="@tag">@tag</option>
                }
            </select>
        </div>

        <div class="header-actions">
            <InputFile OnChange="OnFileSelected" />
            <input type="text" class="form-control" placeholder="Add tags (comma separated)"
                   @bind="tagsInput" style="max-width: 250px;" />
            <button class="btn btn-primary" @onclick="UploadDocument" disabled="@(!canUpload)">Upload Document</button>
        </div>
    </div>

    @if (documents == null)
    {
        <div class="loading">Loading documents...</div>
    }
    else if (!documents.Any())
    {
        <div class="no-data">No documents found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Date Uploaded</th>
                        <th>Expediente</th>
                        <th>Tags</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doc in documents)
                    {
                        <tr>
                            <td>@doc.Nombre</td>
                            <td>@GetFriendlyTypeName(doc.TipoDocumento)</td>

                            <!-- Dropdown de estado editable -->
                            <td>
                                <select class="form-select form-select-sm"
                                        @onchange="async (e) => await ChangeStatus(doc.DocumentoId, e.Value.ToString())">
                                    @foreach (var estado in estadosDisponibles)
                                    {
                                        <option value="@estado" selected="@(estado == doc.Estado)">
                                            @estado
                                        </option>
                                    }
                                </select>
                            </td>

                            <td>@(doc.FechaCarga?.ToString("yyyy-MM-dd"))</td>
                            <td>@doc.ExpedienteId</td>

                            <td>
                                @if (!string.IsNullOrEmpty(doc.Etiquetas))
                                {
                                    var tags = doc.Etiquetas.Split(',', StringSplitOptions.RemoveEmptyEntries);
                                    foreach (var tag in tags)
                                    {
                                        <span class="badge me-1">@tag.Trim()</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>

                            <td>
                                <div class="action-buttons">
                                    @if (!string.IsNullOrEmpty(doc.UrlArchivo))
                                    {
                                        <a href="@doc.UrlArchivo" target="_blank" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-download"></i> Download
                                        </a>
                                    }
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteDocument(doc.DocumentoId)">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Documento>? documents;
    private List<string> documentTypes = new();
    private IBrowserFile? selectedFile;
    private bool canUpload = false;
    private string selectedType = "";

    private List<string> availableTags = new();
    private string selectedTag = "";
    private string tagsInput = "";

    // 🔹 Lista de estados disponibles
    private List<string> estadosDisponibles = new()
    {
        "Activo",
        "En revisión",
        "Completado",
        "Archivado"
    };

    protected override async Task OnInitializedAsync()
    {
        await LoadDocuments();
        LoadDocumentTypes();
        LoadTags();
    }

    private void LoadTags()
    {
        var etiquetasList = Db.Documentos
            .Where(d => d.Etiquetas != null)
            .Select(d => d.Etiquetas)
            .ToList();

        availableTags = etiquetasList
            .SelectMany(e => e.Split(',', StringSplitOptions.RemoveEmptyEntries))
            .Select(t => t.Trim())
            .Distinct()
            .OrderBy(t => t)
            .ToList();
    }

    private void OnTagFilterChanged(ChangeEventArgs e)
    {
        selectedTag = e.Value?.ToString() ?? "";
        FilterDocuments();
    }

    private async Task LoadDocuments()
    {
        try
        {
            documents = await Task.Run(() => Db.Documentos.ToList());
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading documents: {ex.Message}");
        }
    }

    private void LoadDocumentTypes()
    {
        documentTypes = Db.Documentos
            .Select(d => d.TipoDocumento)
            .Distinct()
            .OrderBy(t => t)
            .ToList();
    }

    private void OnFilterChanged(ChangeEventArgs e)
    {
        selectedType = e.Value?.ToString() ?? "";
        FilterDocuments();
    }

    private void FilterDocuments()
    {
        var query = Db.Documentos.AsQueryable();

        if (!string.IsNullOrEmpty(selectedType))
            query = query.Where(d => d.TipoDocumento == selectedType);

        if (!string.IsNullOrEmpty(selectedTag))
            query = query.Where(d => d.Etiquetas.Contains(selectedTag));

        documents = query.ToList();
        StateHasChanged();
    }

    private void OnFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        canUpload = selectedFile != null;
    }

    private async Task UploadDocument()
    {
        if (selectedFile == null) return;

        try
        {
            using var stream = selectedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);
            var url = await DocumentoService.UploadFileAsync(stream, selectedFile.Name, selectedFile.ContentType);

            var newDoc = new Documento
            {
                Nombre = selectedFile.Name,
                TipoDocumento = selectedFile.ContentType,
                Estado = "Activo",
                FechaCarga = DateOnly.FromDateTime(DateTime.UtcNow),
                UrlArchivo = url,
                Etiquetas = tagsInput
            };

            Db.Documentos.Add(newDoc);
            await Db.SaveChangesAsync();

            tagsInput = "";
            selectedFile = null;
            canUpload = false;
            await LoadDocuments();
            LoadTags();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error uploading document: {ex.Message}");
        }
    }

    private async Task DeleteDocument(int id)
    {
        try
        {
            int usuarioId = await Session.GetUserIdAsync();

            var doc = Db.Documentos.Find(id);
            if (doc != null)
            {
                if (!string.IsNullOrEmpty(doc.UrlArchivo))
                    await DocumentoService.DeleteFileAsync(doc.UrlArchivo, doc.ExpedienteId, usuarioId);

                Db.Documentos.Remove(doc);
                await Db.SaveChangesAsync();

                await LoadDocuments();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting document: {ex.Message}");
        }
    }

    // 🔹 Actualizar estado del documento
    private async Task ChangeStatus(int documentoId, string newStatus)
    {
        try
        {
            int usuarioId = await Session.GetUserIdAsync();
            bool result = await DocumentoService.UpdateDocumentStatusAsync(documentoId, newStatus, usuarioId);

            if (result)
            {
                var doc = documents.FirstOrDefault(d => d.DocumentoId == documentoId);
                if (doc != null)
                {
                    doc.Estado = newStatus;

                    await DocumentoService.UpdateExpedienteStatusAsync(doc.ExpedienteId, usuarioId);
                }

                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error changing document status: {ex.Message}");
        }
    }


    private string GetFriendlyTypeName(string mimeType)
    {
        return mimeType switch
        {
            "application/pdf" => "PDF",
            "application/msword" => "Word (.doc)",
            "application/vnd.openxmlformats-officedocument.wordprocessingml.document" => "Word (.docx)",
            "application/vnd.ms-excel" => "Excel (.xls)",
            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" => "Excel (.xlsx)",
            "image/jpeg" => "Imagen (.jpg)",
            "image/png" => "Imagen (.png)",
            "text/plain" => "Texto (.txt)",
            "application/zip" => "ZIP",
            _ => mimeType
        };
    }
}

