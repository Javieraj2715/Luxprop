<PageTitle>Case File Details</PageTitle>

@if (expediente == null)
{
    <div class="loading">Loading case file…</div>
}
else
{
    <div class="case-card">
        <div class="header-row">
            <h1>Case File #@expediente.ExpedienteId</h1>
            <div class="header-actions">
                <a class="btn btn-secondary" href="/expedientes">← Back</a>
                <a class="btn btn-primary" href="/expedientes/edit/@expediente.ExpedienteId">Edit Case File</a>
            </div>
        </div>

        <!-- Tabs -->
        <ul class="tabs">
            <li class="@GetTabClass("info")" @onclick="@(() => Activate("info"))">Information</li>
            <li class="@GetTabClass("docs")" @onclick="@(() => Activate("docs"))">Documents</li>
            <li class="@GetTabClass("history")" @onclick="@(() => Activate("history"))">History</li>
            <li class="@GetTabClass("tasks")" @onclick="@(() => Activate("tasks"))">Tasks</li>
        </ul>

        <!-- Information -->
        @if (activeTab == "info")
        {
            <div class="panel">
                <div class="kv">
                    <span class="k">Property</span>
                    <span class="v">@expediente.Propiedad?.Titulo</span>
                </div>
                <div class="kv">
                    <span class="k">Client</span>
                    <span class="v">@expediente.Cliente?.Usuario?.Nombre @expediente.Cliente?.Usuario?.Apellido</span>
                </div>
                <div class="kv">
                    <span class="k">Status</span>
                    <span class="v"><span class="badge badge-muted">@expediente.Estado</span></span>
                </div>
                <div class="kv">
                    <span class="k">Occupation Type</span>
                    <span class="v">@expediente.TipoOcupacion</span>
                </div>
                <div class="kv">
                    <span class="k">Opened</span>
                    <span class="v">@expediente.FechaApertura?.ToString("yyyy-MM-dd")</span>
                </div>
                <div class="kv">
                    <span class="k">Closed</span>
                    <span class="v">@(expediente.FechaCierre?.ToString("yyyy-MM-dd") ?? "In progress")</span>
                </div>
            </div>
        }

        <!-- Documents -->
        @if (activeTab == "docs")
        {
            <div class="panel">
                @if (expediente.Documentos != null && expediente.Documentos.Any())
                {
                    <table class="grid">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Uploaded</th>
                                <th>Status</th>
                                <th style="width:1%;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var d in expediente.Documentos.OrderByDescending(x => x.FechaCarga))
                            {
                                <tr>
                                    <td>@d.Nombre</td>
                                    <td>@d.FechaCarga?.ToString("yyyy-MM-dd")</td>
                                    <td><span class="badge">@d.Estado</span></td>
                                    <td class="text-right">
                                        <a class="btn btn-ghost" href="@GetDownloadHref(d.Nombre)" download>Download</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty">No documents uploaded yet.</div>
                }
            </div>
        }

        <!-- History -->
        @if (activeTab == "history")
        {
            <div class="panel">
                @if (historial != null && historial.Any())
                {
                    <div class="row-between mb16">
                        <h3 class="section-title">History</h3>

                        <div>
                            <button class="btn btn-secondary" @onclick="ExportHistoryExcel">Export Excel</button>
                            <button class="btn btn-primary" @onclick="ExportHistoryPdf">Export PDF</button>
                        </div>
                    </div>


                    <table class="grid">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>New Status</th>
                                <th>User</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var h in historial)
                            {
                                <tr>
                                    <td>@h.FechaModificacion.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td><span class="badge badge-muted">@h.EstadoNuevo</span></td>
                                    <td><span class="badge badge-muted">@($"{h.Usuario!.Nombre} {h.Usuario.Apellido}")</span></td>
                                    <td>@h.Descripcion</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty">No history records yet.</div>
                }
            </div>
        }

        <!-- Tasks -->
        @if (activeTab == "tasks")
        {
            <div class="panel">
                <div class="row-between mb16">
                    <h3 class="section-title">Tasks</h3>
                    <button class="btn btn-primary" @onclick="() => ShowTaskModal(true)">+ Add Task</button>
                </div>

                @if (tasks != null && tasks.Any())
                {
                    <table class="grid">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Status</th>
                                <th>Priority</th>
                                <th>Start</th>
                                <th>Due</th>
                                <th>Closed</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in tasks.OrderByDescending(x => x.FechaInicio))
                            {
                                <tr>
                                    <td>
                                        <div class="title-cell">
                                            <div class="title">@t.Titulo</div>
                                            @if (!string.IsNullOrWhiteSpace(t.Descripcion))
                                            {
                                                <div class="sub">@t.Descripcion</div>
                                            }
                                        </div>
                                    </td>
                                    <td>@BadgeForStatus(t.Estado)</td>
                                    <td>@BadgeForPriority(t.Prioridad)</td>
                                    <td>@(t.FechaInicio?.ToString("yyyy-MM-dd") ?? "-")</td>
                                    <td>@(t.FechaCompromiso?.ToString("yyyy-MM-dd") ?? "-")</td>
                                    <td>@(t.FechaCierre?.ToString("yyyy-MM-dd") ?? "-")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty">No tasks yet. Add the first one to start tracking progress.</div>
                }
            </div>
        }
    </div>
}

<!-- Task Modal -->
@if (showTaskModal)
{
    <div class="modal-backdrop" @onclick="CloseModal"></div>
    <div class="modal">
        <div class="modal-header">
            <h3>Add Task</h3>
            <button class="icon-btn" title="Close" @onclick="CloseModal">✕</button>
        </div>
        <EditForm Model="newTask" OnValidSubmit="SaveTaskAsync">
            <DataAnnotationsValidator />
            <div class="modal-body">
                <div class="form-row">
                    <label>Title</label>
                    <InputText class="form-control" @bind-Value="newTask.Titulo" />
                </div>
                <div class="form-row">
                    <label>Description</label>
                    <InputTextArea class="form-control" rows="3" @bind-Value="newTask.Descripcion" />
                </div>
                <div class="grid-2">
                    <div class="form-row">
                        <label>Status</label>
                        <InputSelect class="form-control" @bind-Value="newTask.Estado">
                            <option value="">Select…</option>
                            <option>Open</option>
                            <option>In Progress</option>
                            <option>Completed</option>
                            <option>On Hold</option>
                        </InputSelect>
                    </div>
                    <div class="form-row">
                        <label>Priority</label>
                        <InputSelect class="form-control" @bind-Value="newTask.Prioridad">
                            <option value="">Select…</option>
                            <option>Low</option>
                            <option>Normal</option>
                            <option>High</option>
                            <option>Urgent</option>
                        </InputSelect>
                    </div>
                </div>
                <div class="grid-3">
                    <div class="form-row">
                        <label>Start</label>
                        <InputDate class="form-control" @bind-Value="newTask.FechaInicio" />
                    </div>
                    <div class="form-row">
                        <label>Due</label>
                        <InputDate class="form-control" @bind-Value="newTask.FechaCompromiso" />
                    </div>
                    <div class="form-row">
                        <label>Closed</label>
                        <InputDate class="form-control" @bind-Value="newTask.FechaCierre" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="submit">Save Task</button>
                <button class="btn btn-secondary" type="button" @onclick="CloseModal">Cancel</button>
            </div>
        </EditForm>
    </div>
}

@code {
    [Parameter] public int ExpedienteId { get; set; }

    private Expediente? expediente;
    private List<HistorialExpediente>? historial;
    private List<TareaTramite>? tasks;

    private string activeTab = "info";

    // Modal/task state
    private bool showTaskModal = false;
    private TareaTramite newTask = new();

    protected override async Task OnInitializedAsync()
    {
        // Load Case File + related data
        expediente = await Db.Expedientes
            .Include(e => e.Propiedad)
            .Include(e => e.Cliente).ThenInclude(c => c.Usuario)
            .Include(e => e.Documentos)
            .FirstOrDefaultAsync(e => e.ExpedienteId == ExpedienteId);

        historial = await Db.HistorialExpedientes
            .Include(h => h.Usuario) 
            .Where(h => h.ExpedienteId == ExpedienteId)
            .OrderByDescending(h => h.FechaModificacion)
            .ToListAsync();


        tasks = await Db.TareaTramites
            .Where(t => t.ExpedienteId == ExpedienteId)
            .OrderByDescending(t => t.FechaInicio)
            .ToListAsync();
    }

    private void Activate(string tab) => activeTab = tab;

    private string GetTabClass(string tab) => tab == activeTab ? "tab active" : "tab";

    private string GetDownloadHref(string? fileName)
        => string.IsNullOrWhiteSpace(fileName) ? "#" : $"/uploads/{Uri.EscapeDataString(fileName)}";

    // --- Tasks modal helpers ---
    private void ShowTaskModal(bool show)
    {
        newTask = new TareaTramite
        {
            ExpedienteId = ExpedienteId,
            Estado = "Open",
            Prioridad = "Normal",
            FechaInicio = DateOnly.FromDateTime(DateTime.Now)
        };
        showTaskModal = show;
    }

    private void CloseModal()
    {
        showTaskModal = false;
    }

    private async Task SaveTaskAsync()
    {
        if (string.IsNullOrWhiteSpace(newTask.Titulo))
            return;

        // Persist task
        Db.TareaTramites.Add(newTask);

        // Also write to history (read-only for users elsewhere)
        var h = new HistorialExpediente
        {
            ExpedienteId = ExpedienteId,
            UsuarioId = 1, 
            EstadoNuevo = expediente?.Estado ?? "N/A",
            Descripcion = $"Task created: {newTask.Titulo} [{newTask.Estado}]",
            FechaModificacion = DateTime.Now
        };
        Db.HistorialExpedientes.Add(h);

        await Db.SaveChangesAsync();

        // Refresh lists
        tasks = await Db.TareaTramites.Where(t => t.ExpedienteId == ExpedienteId).OrderByDescending(t => t.FechaInicio).ToListAsync();
        historial = await Db.HistorialExpedientes.Where(x => x.ExpedienteId == ExpedienteId).OrderByDescending(x => x.FechaModificacion).ToListAsync();

        showTaskModal = false;
        activeTab = "tasks";
        StateHasChanged();
    }

    public async Task ExportHistoryExcel()
    {
        using var wb = new XLWorkbook();
        var ws = wb.Worksheets.Add("History");

        // Header
        ws.Cell(1, 1).Value = "Date";
        ws.Cell(1, 2).Value = "Status";
        ws.Cell(1, 3).Value = "User";
        ws.Cell(1, 4).Value = "Description";

        int row = 2;
        foreach (var h in historial)
        {
            ws.Cell(row, 1).Value = h.FechaModificacion;
            ws.Cell(row, 2).Value = h.EstadoNuevo;
            ws.Cell(row, 3).Value = $"{h.Usuario?.Nombre} {h.Usuario?.Apellido}";
            ws.Cell(row, 4).Value = h.Descripcion;
            row++;
        }

        using var stream = new MemoryStream();
        wb.SaveAs(stream);
        var bytes = stream.ToArray();
        var base64 = Convert.ToBase64String(bytes);

        await JS.InvokeVoidAsync("downloadFile",
            $"History_{DateTime.Now:yyyyMMdd}.xlsx",
            "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
            base64);
    }

    private async Task ExportHistoryPdf()
    {
        // Asegúrate de que 'historial' no sea null
        var items = historial ?? new List<HistorialExpediente>();

        var pdfBytes = Document.Create(container =>
        {
            container.Page(page =>
            {
                page.Size(PageSizes.A4);
                page.Margin(20);
                page.DefaultTextStyle(x => x.FontSize(11));

                page.Header().AlignCenter().Text($"Case File History #{ExpedienteId}").FontSize(16).SemiBold();

                page.Content().PaddingVertical(10).Table(table =>
                {
                    // Columnas: Date | Status | User | Description
                    table.ColumnsDefinition(columns =>
                    {
                        columns.ConstantColumn(120); // Date
                        columns.ConstantColumn(100); // Status
                        columns.ConstantColumn(160); // User
                        columns.RelativeColumn();    // Description
                    });

                    // Header row (uso de lambdas inline para evitar problemas con referencias)
                    table.Header(header =>
                    {
                        header.Cell().Element(cell => cell.Padding(6).Background("#F2F2F2").Text("Date").Bold());
                        header.Cell().Element(cell => cell.Padding(6).Background("#F2F2F2").Text("Status").Bold());
                        header.Cell().Element(cell => cell.Padding(6).Background("#F2F2F2").Text("User").Bold());
                        header.Cell().Element(cell => cell.Padding(6).Background("#F2F2F2").Text("Description").Bold());
                    });

                    // Filas
                    foreach (var h in items)
                    {
                        table.Cell().Element(cell => cell.Padding(6).Text(h.FechaModificacion.ToString("yyyy-MM-dd HH:mm")));
                        table.Cell().Element(cell => cell.Padding(6).Text(h.EstadoNuevo ?? "-"));
                        table.Cell().Element(cell =>
                            cell.Padding(6).Text($"{h.Usuario?.Nombre ?? ""} {h.Usuario?.Apellido ?? ""}".Trim()));
                        table.Cell().Element(cell => cell.Padding(6).Text(h.Descripcion ?? ""));
                    }
                });
            });
        }).GeneratePdf();

        // Enviar al navegador como base64 (más fiable con Blazor)
        var base64 = Convert.ToBase64String(pdfBytes);
        await JS.InvokeVoidAsync("downloadFile", $"History_{DateTime.Now:yyyyMMdd}.pdf", "application/pdf", base64);
    }

    // UI helpers for badges (render as MarkupString to keep spans)
    private MarkupString BadgeForStatus(string? status)
    {
        var cls = status switch
        {
            "Completed" => "badge-success",
            "In Progress" => "badge-warning",
            "On Hold" => "badge-muted",
            _ => "badge"
        };
        return new MarkupString($"<span class=\"badge {cls}\">{status}</span>");
    }

    private MarkupString BadgeForPriority(string? p)
    {
        var cls = p switch
        {
            "Urgent" => "badge-danger",
            "High" => "badge-warning",
            "Low" => "badge-muted",
            _ => "badge"
        };
        return new MarkupString($"<span class=\"badge {cls}\">{p}</span>");
    }
}
