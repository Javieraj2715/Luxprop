        border-bottom: 2px solid #e2e8ea;
        margin-bottom: 20px;
    }

    .tab {
        border: none;
        background: none;
        padding: 0.6rem 1rem;
        font-weight: 600;
        color: #0d505a;
        border-radius: 6px 6px 0 0;
        cursor: pointer;
    }

        .tab.active {
            background-color: #0d505a;
