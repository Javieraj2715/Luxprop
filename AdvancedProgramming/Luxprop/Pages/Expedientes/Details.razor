        color: #007a87;
    }

    .btn-group {
        display: flex;
        gap: 10px;
    }

    .btn-primary, .btn-outline, .btn-outline-info {
        padding: 0.45rem 1rem;
        border-radius: 6px;
        font-weight: 500;
