        max-width: 1150px;
        margin: 2rem auto;
        padding: 0 1rem;
    }

    .header-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        margin-bottom: 1.5rem;
    }

    .title {
        color: #0d505a;
        font-size: 1.8rem;
        font-weight: 700;
