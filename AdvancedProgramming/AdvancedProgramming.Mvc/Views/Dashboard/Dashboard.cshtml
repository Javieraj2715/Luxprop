@{
    ViewData["Title"] = "2CRRE Docs - Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">

<style>
    body {
        background: #f9f9f9;
        color: #333
    }

    .main-header {
        background: #0d505a;
        color: #fff;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 2rem;
        box-shadow: 0 2px 5px rgba(0,0,0,.1);
        position: relative;
        z-index: 10
    }

    .logo-title {
        display: flex;
        align-items: center
    }

        .logo-title img {
            height: 60px;
            margin-right: 1rem
        }

        .logo-title .title {
            font-size: 1.6rem;
            font-weight: 600
        }

    .user-nav a {
        color: #fff;
        background: #093e47;
        padding: .5rem 1rem;
        text-decoration: none;
        border-radius: 4px;
        font-weight: 500
    }

        .user-nav a:hover {
            background: #062f33
        }

    .top-nav {
        background: #fff;
        padding: .75rem 2rem;
        display: flex;
        gap: 2rem;
        border-bottom: 1px solid #e0e0e0
    }

        .top-nav a {
            text-decoration: none;
            color: #0d505a;
            font-weight: 500
        }

            .top-nav a:hover {
                text-decoration: underline
            }

    .main-content {
        padding: 3rem 2rem;
        max-width: 1200px;
        margin: 0 auto
    }

    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit,minmax(280px,1fr));
        gap: 2rem;
        margin-top: 2rem
    }

    .card {
        background: #fff;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,.05);
        border-left: 5px solid #7ab942
    }

        .card h3 {
            margin: 0 0 .5rem 0;
            font-size: 1.2rem;
            color: #0d505a
        }

        .card p {
            color: #555;
            margin-bottom: 1rem
        }

        .card a {
            display: inline-block;
            padding: .5rem 1rem;
            background: #0d505a;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            font-size: .9rem;
            font-weight: 500
        }

            .card a:hover {
                background: #093e47
            }

    /* Dropdown */
    .user-dropdown {
        position: absolute;
        top: 80px;
        right: 2rem;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,.1);
        padding: 2rem;
        width: 340px;
        display: none;
        z-index: 1000
    }

        .user-dropdown .form-card {
            position: relative
        }

        .user-dropdown .close-btn {
            position: absolute;
            top: -10px;
            right: -10px;
            background: #0d505a;
            color: #fff;
            font-weight: bold;
            border: none;
            border-radius: 50%;
            width: 26px;
            height: 26px;
            cursor: pointer;
            font-size: 1.2rem;
            line-height: 1
        }

        .user-dropdown label {
            display: block;
            margin-top: 1rem;
            font-weight: 500
        }

        .user-dropdown input, .user-dropdown select {
            width: 100%;
            padding: .5rem;
            margin-top: .25rem;
            border-radius: 5px;
            border: 1px solid #ccc
        }

        .user-dropdown button[type="submit"] {
            margin-top: 1rem;
            width: 100%;
            background: #0d505a;
            color: #fff;
            padding: .75rem;
            border: none;
            border-radius: 6px;
            font-weight: bold;
            cursor: pointer
        }

            .user-dropdown button[type="submit"]:hover {
                background: #093e47
            }
</style>

<header class="main-header">
    <div class="logo-title">
        <a asp-controller="Agent" asp-action="Dashboard">
            <img src="https://i.imgur.com/nmN7x14.png" alt="2CRRE Logo" />
        </a>
        <span class="title">2CRRE Docs</span>
    </div>
    <nav class="user-nav">
        <a href="#" id="userToggle">Admin</a>
    </nav>

    <!-- dropdown (no estaba en el HTML original; lo agrego para que el script funcione) -->
    <div id="userDropdown" class="user-dropdown" aria-hidden="true">
        <div class="form-card">
            <button id="closeUserDropdown" class="close-btn" aria-label="Close">×</button>
            <h3 style="margin:0 0 .5rem 0;color:#0d505a">Profile</h3>
            <form>
                <label for="name">Name</label>
                <input id="name" placeholder="Your name" />

                <label for="role">Role</label>
                <select id="role">
                    <option>Admin</option>
                    <option>Agent</option>
                    <option>Client</option>
                </select>

                <label for="email">Email</label>
                <input id="email" type="email" placeholder="name@example.com" />

                <button type="submit">Save</button>
            </form>
        </div>
    </div>
</header>

<nav class="top-nav">
    <a asp-controller="Agent" asp-action="Dashboard">Dashboard</a>
    <a asp-controller="Agent" asp-action="Documents">Documents</a>
    <a asp-controller="Agent" asp-action="Index">Files</a>     @* si tienes vista Files, ajústalo; si no, apunta a Expedientes *@
    <a asp-controller="Agent" asp-action="Map">Map</a>
    <a asp-controller="Chat" asp-action="Index">Chat</a>
</nav>

<main class="main-content">
    <h2>Welcome back 👋</h2>
    <p>Here’s a quick summary of your pending items:</p>

    <section class="card-grid">
        <div class="card">
            <h3>📄 Pending Documents</h3>
            <p>3 documents require your signature</p>
            <a asp-controller="Agent" asp-action="Documents">View documents</a>
        </div>
        <div class="card">
            <h3>⏰ Reminders</h3>
            <p>2 processes expire this week</p>
            <a href="#">View reminders</a>
        </div>
        <div class="card">
            <h3>🚧 Active Processes</h3>
            <p>1 under review, 2 pending</p>
            <a asp-controller="Agent" asp-action="Index">View files</a>
        </div>
    </section>
</main>

@section Scripts{
    <script>
  const userToggle = document.getElementById('userToggle');
  const userDropdown = document.getElementById('userDropdown');
  const closeUserDropdown = document.getElementById('closeUserDropdown');

  userToggle?.addEventListener('click', (e) => {
    e.preventDefault();
    const open = userDropdown.style.display === 'block';
    userDropdown.style.display = open ? 'none' : 'block';
    userDropdown.setAttribute('aria-hidden', open ? 'true' : 'false');
  });

  closeUserDropdown?.addEventListener('click', () => {
    userDropdown.style.display = 'none';
    userDropdown.setAttribute('aria-hidden','true');
  });

  window.addEventListener('click', function (e) {
    if (!userDropdown.contains(e.target) && !userToggle.contains(e.target)) {
      userDropdown.style.display = 'none';
      userDropdown.setAttribute('aria-hidden','true');
    }
  });
    </script>
}
