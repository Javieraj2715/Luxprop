@{
    ViewBag.Title = "Dashboard";
}

<main class="main-content">
    <h2>Welcome back 👋</h2>
    <p>Here’s a quick summary of your pending items:</p>

    <section class="card-grid">
        <div class="card">
            <h3>📄 Pending Documents</h3>
            <p>3 documents require your signature</p>
            <a href="@Url.Action("Index","Documentos")">View documents</a>
        </div>
        <div class="card">
            <h3>⏰ Reminders</h3>
            <p>2 processes expire this week</p>
            <a href="#">View reminders</a>
        </div>
        <div class="card">
            <h3>🚧 Active Processes</h3>
            <p>1 under review, 2 pending</p>
            <a href="@Url.Action("Index","Expediente")">View files</a>
        </div>
    </section>
</main>

