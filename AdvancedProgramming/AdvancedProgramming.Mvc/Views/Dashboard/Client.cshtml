@{
    ViewBag.Title = "My Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Welcome, @User.Identity.Name</h2>
<p>This is your client dashboard. Here you’ll find your cases and documents at a glance.</p>

<div class="cards">
    <div class="card">
        <h3>My Active Cases</h3>
        <div class="kpi">2</div>
        <a href="@Url.Action("MyCases","User")">View my cases</a>
    </div>
    <div class="card">
        <h3>Pending Documents</h3>
        <div class="kpi">1</div>
        <a href="@Url.Action("MyDocuments","User")">View my documents</a>
    </div>
    <div class="card">
        <h3>Need help?</h3>
        <p>Start a conversation with an agent.</p>
        <a href="@Url.Action("Index","Chat")">Open chat</a>
    </div>
</div>
