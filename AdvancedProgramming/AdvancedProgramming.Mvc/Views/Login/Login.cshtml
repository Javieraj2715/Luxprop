@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>2CRRE Docs - Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            font-family: 'Montserrat', sans-serif;
            background-color: #f5f5f5;
        }

        .main-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 2rem;
            background-color: #0d505a;
            color: white;
        }

        .logo-title {
            display: flex;
            align-items: center;
        }

            .logo-title .logo {
                height: 50px;
                margin-right: 1rem;
            }

            .logo-title .title {
                font-size: 1.5rem;
                font-weight: 600;
            }

        .login-container {
            max-width: 400px;
            margin: 5rem auto;
            background-color: #fff;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
            font-family: 'Montserrat', sans-serif;
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 2rem;
                color: #0d505a;
                font-weight: 600;
            }

            .login-container label {
                display: block;
                margin: 1rem 0 0.3rem;
                font-weight: 500;
            }

            .login-container input {
                width: 100%;
                padding: 0.5rem;
                border-radius: 4px;
                border: 1px solid #ccc;
                margin-bottom: 1rem;
                font-size: 1rem;
                font-family: 'Montserrat', sans-serif;
            }

            .login-container button {
                width: 100%;
                background-color: #0d505a;
                color: white;
                padding: 0.75rem;
                border: none;
                border-radius: 6px;
                font-weight: 600;
                cursor: pointer;
                font-size: 1rem;
                font-family: 'Montserrat', sans-serif;
            }

                .login-container button:hover {
                    background-color: #093e47;
                }

        .error-message {
            color: red;
            font-size: 0.9rem;
            margin-top: -0.5rem;
            margin-bottom: 1rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <header class="main-header">
        <div class="logo-title">
            <img src="https://i.imgur.com/nmN7x14.png" alt="2CRRE Logo" class="logo" />
            <span class="title">2CRRE Docs</span>
        </div>
    </header>

    <main>
        <section class="login-container">
            <h2>Admin Login</h2>

            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <label for="email">Email</label>
                <input type="text" id="email" name="email" placeholder="Enter your email" required />

                <label for="password">Password</label>
                <input type="password" id="Password" name="password" placeholder="Enter your password" required />

                <button type="submit">Login</button>

                <p>
                    @Html.ActionLink("Create User", "Create", "User", null, new { @class = "btn btn-primary" })
                </p>

                if (ViewBag.Error != null)
                {
                    <p class="error-message">@ViewBag.Error</p>
                }
            }
        </section>
    </main>
</body>
</html>
