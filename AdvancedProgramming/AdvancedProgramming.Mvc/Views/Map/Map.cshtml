<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Interactive Map | 2CRRE Docs</title>
    <link rel="stylesheet" href="styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            margin: 0;
            background-color: #f5f5f5;
        }

        header {
            background-color: #0d505a;
            padding: 1rem 2rem;
            display: flex;
            align-items: center;
            color: #fff;
        }

            header img {
                height: 40px;
                margin-right: 1rem;
            }

        h1 {
            font-size: 1.5rem;
            font-weight: 700;
        }

        .map-section {
            padding: 2rem;
        }

        .map-container {
            width: 100%;
            height: 600px;
            border: 2px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
        }

        .error-message {
            color: red;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <header>
        <a href="dashboard.html"><img src="https://i.imgur.com/nmN7x14.png" alt="2CRRE Logo" /></a>
        <h1>Interactive Map</h1>
    </header>

    <main class="map-section">
        <h2>Available Properties Map</h2>
        <div class="map-container" id="map"></div>
        <p class="error-message" id="mapError" style="display: none;">Map could not be loaded. Please check your connection or try again later.</p>
    </main>

    <script>
    function initMap() {
      const properties = [
        {
          position: { lat: 10.002, lng: -84.116 },
          title: "Villa Mar Azul",
          info: "Type: Luxury Villa | Area: Tamarindo"
        },
        {
          position: { lat: 9.934, lng: -84.091 },
          title: "Casa del Sol",
          info: "Type: Beachfront House | Area: Santa Teresa"
        }
      ];

      try {
        const map = new google.maps.Map(document.getElementById("map"), {
          zoom: 7,
          center: { lat: 9.7489, lng: -83.7534 }
        });

        properties.forEach(prop => {
          const marker = new google.maps.Marker({
            position: prop.position,
            map,
            title: prop.title
          });

          const infowindow = new google.maps.InfoWindow({
            content: `<strong>${prop.title}</strong><br>${prop.info}`
          });

          marker.addListener("click", () => {
            infowindow.open(map, marker);
          });
        });
      } catch (e) {
        document.getElementById("mapError").style.display = 'block';
      }
    }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap"></script>
</body>
</html>