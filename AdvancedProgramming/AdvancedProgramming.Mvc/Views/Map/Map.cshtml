@{
    ViewData["Title"] = "Interactive Map";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .map-wrap {
        max-width: 1200px;
        margin: 1.5rem auto;
        padding: 0 1rem
    }

    .map-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,.06);
        overflow: hidden
    }

    .map-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 14px 16px;
        border-bottom: 1px solid #eee
    }

    .map-title {
        font-weight: 700;
        color: #0d505a;
        margin: 0
    }

    .ratio-16x9 {
        position: relative;
        width: 100%;
        padding-top: 56.25%
    }

        .ratio-16x9 > iframe {
            position: absolute;
            inset: 0;
            border: 0;
            width: 100%;
            height: 100%
        }

    .map-footer {
        display: flex;
        gap: .75rem;
        justify-content: flex-end;
        padding: 12px 16px;
        border-top: 1px solid #eee
    }

    .btn {
        appearance: none;
        border: 1px solid #0d505a;
        background: #0d505a;
        color: #fff;
        border-radius: 8px;
        padding: .5rem .9rem;
        cursor: pointer
    }

        .btn.outline {
            background: #fff;
            color: #0d505a
        }
</style>

<section class="map-wrap">
    <div class="map-card">
        <div class="map-header">
            <h2 class="map-title">Interactive Map</h2>
            <a class="btn outline" href="https://mapa-one-interactivo.vercel.app/" target="_blank" rel="noopener">
                Open in new tab
            </a>
        </div>

        <div class="ratio-16x9">
            <iframe src="https://mapa-one-interactivo.vercel.app/"
                    title="Interactive Map"
                    loading="lazy"
                    allowfullscreen>
            </iframe>
        </div>

        <div class="map-footer">
            <button class="btn" type="button"
                    onclick="document.querySelector('iframe').src='https://mapa-one-interactivo.vercel.app/'">
                Reload
            </button>
        </div>
    </div>
</section>
